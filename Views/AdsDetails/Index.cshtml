@model IEnumerable<BangladeshToday.Models.AdsDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-xs">Create New</a>
</p>
<table class="table table-condensed table-bordered table-responsive table-hover table-striped">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companyurl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DailyRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Companyurl)
            </td>
            <td>
                @if (item.Picture != null && System.IO.File.Exists(System.IO.Path.Combine(System.IO.Directory.GetCurrentDirectory(), "wwwroot", "Ads\\" + item.Picture)))
                {
                    <img src="~/Ads/@Html.DisplayFor(modelItem => item.Picture)" alt="@item.Title"
                         width="100" height="100" class="img-responsive" style="border:1px solid #808080" />
                    <br />
                    @Html.ActionLink("Change Picture", "UploadFile", new { id = item.Id })
                }
                else
                {
                    <img src="~/images/noimage.png" alt="No Image" width="100" height="100" class="img-responsive" style="border:1px solid #808080" />
                    <br />
                    @Html.ActionLink("Upload Picture", "UploadFile", new { id = item.Id })
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
